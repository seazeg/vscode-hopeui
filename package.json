{
	"name": "quick-hopeui",
	"displayName": "quick-hopeui",
	"description": "hopeUI快速生成插件",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.52.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sxei/vscode-plugin-demo"
	},
	"publisher": "EvanZhou",
	"icon": "src/images/icon.png",
	"categories": [
		"Snippets"
	],
	"main": "src/extension.js",
	"activationEvents": [
		"onCommand:ext.hopeui.init"
	],
	"contributes": {
		"commands": [
			{
				"command": "ext.hopeui.init",
				"title": "HopeUI"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "src/snippets/javascript.json"
			},
			{
				"language": "html",
				"path": "src/snippets/html.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"push": "vsce publish patch"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
